             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAB2.Views.Home">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome"/>
            <Entry x:Name="txtNome">
            </Entry>
            <Label Text="Idade"/>
            <Entry x:Name="txtIdade">
            </Entry>
            <Label Text="Profissao"/>
